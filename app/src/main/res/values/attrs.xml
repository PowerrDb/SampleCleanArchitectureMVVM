<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomEditText">
        <attr name="hint" format="string" />
        <attr name="require" format="boolean" />
        <attr name="showIcon" format="boolean"/>
        <attr name="type" format="enum">
            <enum name="PASSWORD" value="0" />
            <enum name="NORMAL" value="1" />
            <enum name="DROP_DOWN" value="2" />
            <enum name="PHONE_NUMBER" value="3" />
        </attr>
        <attr name="text" format="string" />
        <attr name="error" format="string" />
        <attr name="android:inputType" />
        <attr name="android:focusableInTouchMode" />
    </declare-styleable>

    <declare-styleable name="CustomErrorView">
        <attr name="cev_showLoading" format="boolean" />
        <attr name="cev_backgroundColor" format="color" />
        <attr name="cev_elevation" format="dimension" />
    </declare-styleable>

</resources>