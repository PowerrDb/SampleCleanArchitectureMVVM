<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.form.presentaion.ByInquiryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/rootInfoUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/shape_form"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_form_title"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/iran_sans_mobile_medium"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="اطلاعات واحد"
                    android:textColor="#282f39"
                    android:textSize="@dimen/_13sdp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_2sdp"
                    app:srcCompat="@drawable/ic_info_unit" />
            </LinearLayout>

            <com.bestpractises.razisample.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:type="NORMAL"
                app:hint="نام واحد خود را وارد کنید" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rootInfoHerd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/shape_form"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/rootInfoUnit">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_form_title"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/iran_sans_mobile_medium"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="اطلاعات گله"
                    android:textColor="#282f39"
                    android:textSize="@dimen/_13sdp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_3sdp"
                    app:srcCompat="@drawable/ic_list" />
            </LinearLayout>

            <com.bestpractises.razisample.CustomEditText
                android:id="@+id/edtNezhad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:hint="نژاد غالب"
                app:type="DROP_DOWN" />

            <com.bestpractises.razisample.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:hint="سن به روز"
                app:require="true"
                app:type="DROP_DOWN" />

            <com.bestpractises.razisample.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:hint="تعداد جوجه ریزی"
                app:type="PHONE_NUMBER" />

            <com.bestpractises.razisample.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:hint="تعداد سالن"
                app:type="PASSWORD" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rootLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/shape_form"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/rootInfoHerd">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_form_title"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/iran_sans_mobile_medium"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="موقعیت"
                    android:textColor="#282f39"
                    android:textSize="@dimen/_13sdp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_3sdp"
                    app:srcCompat="@drawable/ic_location" />
            </LinearLayout>

            <com.bestpractises.razisample.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:type="DROP_DOWN"
                app:hint="استان" />

            <com.bestpractises.razisample.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:type="DROP_DOWN"
                app:hint="شهر" />

            <com.bestpractises.razisample.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:type="DROP_DOWN"
                app:hint="آدرس" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rootCageNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/shape_form"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/rootLocation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_form_title"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/iran_sans_mobile_medium"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="تعداد قفس"
                    android:textColor="#282f39"
                    android:textSize="@dimen/_13sdp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_2sdp"
                    app:srcCompat="@drawable/ic_cage" />
            </LinearLayout>

            <com.bestpractises.razisample.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:type="DROP_DOWN"
                app:hint="تعداد قفس" />

            <com.bestpractises.razisample.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:type="DROP_DOWN"
                app:hint="تعداد در هر قفس" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rootRoad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/shape_form"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/btnSend"
            app:layout_constraintTop_toBottomOf="@id/rootCageNumber"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_form_title"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/iran_sans_mobile_medium"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="جاده"
                    android:textColor="#282f39"
                    android:textSize="@dimen/_13sdp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_2sdp"
                    app:srcCompat="@drawable/ic_road" />
            </LinearLayout>

            <com.bestpractises.razisample.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:hint="نوع جاده منتهی"
                app:type="DROP_DOWN" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSend"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:fontFamily="@font/iran_sans_mobile_medium"
            android:includeFontPadding="false"
            android:text="ثبت"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/rootRoad"
            app:layout_constraintRight_toRightOf="@id/rootRoad"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>