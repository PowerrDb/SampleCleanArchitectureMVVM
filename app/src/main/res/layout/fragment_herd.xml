<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.form.presentaion.FormFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rootLiveHen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:layout_constraintBottom_toTopOf="@id/rootNewHerd"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_live_hen" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLiveHerd"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:fontFamily="@font/iran_sans_mobile_medium"
                android:includeFontPadding="false"
                android:text="اعلام بار مرغ زنده"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                app:cornerRadius="8dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rootNewHerd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rootLiveHen">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_new_herd" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNewHerd"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:fontFamily="@font/iran_sans_mobile_medium"
                android:includeFontPadding="false"
                android:text="تعریف گله جدید"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                app:cornerRadius="8dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>