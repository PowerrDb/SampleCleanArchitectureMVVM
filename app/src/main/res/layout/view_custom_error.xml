<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:clickable="true"
    android:id="@+id/clRoot"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp"
    android:focusable="true">

    <ImageView
        android:id="@+id/imgErrorIcon"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/tvError"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_connection_error"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:fontFamily="@font/iran_sans_mobile_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btnRetry"
        app:layout_constraintTop_toBottomOf="@+id/imgErrorIcon"
        tools:text="خطا در برقراری ارتباط با سرور"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:fontFamily="@font/iran_sans_mobile_medium"
        android:text="تلاش مجدد"
        android:textSize="@dimen/_12sdp"
        android:visibility="invisible"
        app:backgroundTint="@color/colorPrimary"
        app:icon="@drawable/ic_refresh"
        app:iconTint="@android:color/white"
        app:iconGravity="end"
        android:textColor="@android:color/white"
        app:iconSize="@dimen/_18sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvError"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/prgLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>