<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:background="@color/red"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                />

        </com.google.android.material.appbar.MaterialToolbar>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgSignUp"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_170sdp"
            android:layout_marginTop="@dimen/_48sdp"
            android:src="@drawable/ic_sign_up"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rootEnterPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/imgSignUp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/iran_sans_mobile_medium"
                android:includeFontPadding="false"
                android:text="ثبت نام"
                android:textColor="#282f39"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintRight_toRightOf="@id/edtMobile"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTitleEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:fontFamily="@font/iran_sans_mobile_medium"
                android:includeFontPadding="false"
                android:text="شماره موبایل"
                android:textColor="#7f7f7f"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toTopOf="@id/edtMobile"
                app:layout_constraintRight_toRightOf="@id/edtMobile"
                app:layout_constraintTop_toBottomOf="@id/txtTitle"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/edtMobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/shape_edit_text"
                android:fontFamily="@font/iran_sans_mobile_medium"
                android:imeOptions="actionDone"
                android:textColor="#282f39"
                android:includeFontPadding="false"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="@dimen/_40sdp"
                android:paddingRight="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/txtTitleEditText" />


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/ic_mobile"
                app:layout_constraintBottom_toBottomOf="@id/edtMobile"
                app:layout_constraintLeft_toLeftOf="@id/edtMobile"
                app:layout_constraintTop_toTopOf="@id/edtMobile"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:fontFamily="@font/iran_sans_mobile_medium"
                android:includeFontPadding="false"
                android:text="ثبت نام"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/edtMobile"
                app:layout_constraintRight_toRightOf="@id/edtMobile"
                app:layout_constraintTop_toBottomOf="@id/edtMobile"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="50dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rootEnterCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/imgSignUp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtConfirmCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_27sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:fontFamily="@font/iran_sans_mobile_medium"
                android:includeFontPadding="false"
                android:text="کد ارسال شده را وارد کنید"
                android:textAlignment="center"
                android:textColor="#282f39"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <in.aabhasjindal.otptextview.OtpTextView
                android:id="@+id/otpView"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textColor="#282f39"
                app:bar_enabled="false"
                app:box_margin_right="@dimen/_11sdp"
                app:height="@dimen/_40sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtConfirmCode"
                app:length="4"
                app:otp=""
                app:otp_box_background="@drawable/shape_otp_inactive"
                app:otp_box_background_active="@drawable/shape_otp_active"
                app:otp_box_background_error="@drawable/shape_otp_error"
                app:otp_box_background_success="@drawable/shape_otp_success"
                app:otp_text_size="24dp"
                app:width="72dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:fontFamily="@font/iran_sans_mobile_medium"
                android:includeFontPadding="false"
                android:text="تایید"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/otpView"
                app:layout_constraintRight_toRightOf="@id/otpView"
                app:layout_constraintTop_toBottomOf="@id/txtEditPhoneNumber"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="50dp" />

            <TextView
                android:id="@+id/txtEditPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:fontFamily="@font/iran_sans_mobile_medium"
                android:includeFontPadding="false"
                android:text="اصلاح شماره موبايل"
                android:textAlignment="center"
                android:textColor="#282f39"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintRight_toRightOf="@id/txtConfirmCode"
                app:layout_constraintTop_toBottomOf="@id/otpView" />

            <TextView
                android:id="@+id/txtResend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_23sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:fontFamily="@font/iran_sans_mobile_medium"
                android:includeFontPadding="false"
                android:text="ارسال مجدد"
                android:textAlignment="center"
                android:textColor="#7f7f7f"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintRight_toRightOf="@id/btnConfirm"
                app:layout_constraintTop_toBottomOf="@id/btnConfirm" />

            <TextView
                android:id="@+id/txtResendTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_23sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:fontFamily="@font/iran_sans_mobile_medium"
                android:includeFontPadding="false"
                android:text="0:34"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintRight_toLeftOf="@id/txtResend"
                app:layout_constraintTop_toBottomOf="@id/btnConfirm" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rootNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/imgSignUp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtPassTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/iran_sans_mobile_medium"
                android:includeFontPadding="false"
                android:text="رمز عبور"
                android:textColor="#282f39"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintRight_toRightOf="@id/edtNewPass"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtNewPasswordTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/iran_sans_mobile_medium"
                android:includeFontPadding="false"
                android:text="رمز عبور خود را وارد کنید"
                android:textColor="#7f7f7f"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toTopOf="@id/edtNewPass"
                app:layout_constraintRight_toRightOf="@id/edtNewPass"
                app:layout_constraintTop_toBottomOf="@id/txtPassTitle"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/edtNewPass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/shape_edit_text"
                android:fontFamily="@font/iran_sans_mobile_medium"
                android:imeOptions="actionNext"
                android:textColor="#282f39"
                android:includeFontPadding="false"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/txtNewPasswordTitle" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtRepeatPasswordTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/iran_sans_mobile_medium"
                android:includeFontPadding="false"
                android:text="رمز عبور خود را مجددا وارد کنید"
                android:textColor="#7f7f7f"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintRight_toRightOf="@id/edtNewPass"
                app:layout_constraintTop_toBottomOf="@id/edtNewPass"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/edtRepeatPass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/shape_edit_text"
                android:fontFamily="@font/iran_sans_mobile_medium"
                android:imeOptions="actionDone"
                android:textColor="#282f39"
                android:includeFontPadding="false"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/txtRepeatPasswordTitle" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSignUp"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:fontFamily="@font/iran_sans_mobile_medium"
                android:includeFontPadding="false"
                android:text="ثبت نام"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/edtRepeatPass"
                app:layout_constraintRight_toRightOf="@id/edtRepeatPass"
                app:layout_constraintTop_toBottomOf="@id/edtRepeatPass"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="50dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>