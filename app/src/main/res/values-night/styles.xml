<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="materialAlertDialogTheme">@style/dialogStyle</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="dialogStyle" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:layoutDirection">rtl</item>
        <item name="fontFamily">@font/iran_sans_mobile_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerImage" parent="">
        <item name="cornerSize">8dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CircleImage" parent="">
        <item name="cornerSize">@dimen/_50sdp</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/iran_sans_mobile</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="InActiveBottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/iran_sans_mobile</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="EditTextTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="boxBackgroundColor">@color/boxBackgroundColor</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="errorTextColor">@color/red</item>
        <item name="android:textColorHint">@color/textColor_hint2</item>


    </style>

    <declare-styleable name="MorphButton">

        <attr name="mb_backgroundColor" format="color" />
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:fontFamily" />
        <attr name="mb_progressColor" format="color" />
        <attr name="mb_cornerRadius" format="dimension"  />


    </declare-styleable>

</resources>